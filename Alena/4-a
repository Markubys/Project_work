//вар.6. 4а
// число строк и столбцов должно быть больше 2 

#include <iostream>
using namespace std;
 
int main()
{
    setlocale(LC_ALL, "RUSSIAN");
    int n, m;
    cout << "Число строк: ";  // размер матрицы, которую собираемся вводить
    cin >> n;
    cout << "Число столбцов: ";
    cin >> m;
    int a[100][100];
 
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            cin >> a[i][j];
        }
    }
 
    cout << endl;
 
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            if (a[i][j] < 0)  // проверяем, есть ли в строке отрицательные числа
            {
                int sum = 0;
                for (j = 0; j < n; j++)
                {
                    sum += a[i][j];  // сумма чисел в строке, в которой нашлось хотя бы одно отрицательное число
                }
                cout << "Sum-" << i + 1 << " = " << sum;
                cout << endl;
            }
        }
    }
    cout << endl;
 
    for (int i = 0; i < n; i++)
    {
        int min1 = 2000000000, min2 = 2000000000, min_j, min_i;
        for (int j = 0; j < m; j++)   // проверяем, является ли число минимальным в столбце
        {
            if (a[i][j] < min1)  
            {
                min1 = a[i][j];
                min_j = j;
            }
        }
        for (int i = 0; i < n; i++)  //// проверяем, является ли число минимальным в строке
        {
            if (a[i][min_j] < min2)   
            {
                min2 = a[i][min_j];
                min_i = i;
            }
        }
        if (min1 != 2000000000 && min2 != 2000000000)
        {
            cout << "Седловая точка в строке: " << min_i + 1;
            cout << endl;
            cout << "Седловая точка в столбце: " << min_j + 1;
            cout << endl;
        }
    }
}
